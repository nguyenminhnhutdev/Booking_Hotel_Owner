<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:id="@+id/nb4"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/loaimg"
                android:layout_height="match_parent"
                android:src="@drawable/viewhomestay6"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/item_ten_diadiem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình định"
                android:textSize="20sp"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif"/>
            <TextView
                android:id="@+id/item_ten_diadiem5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình định"
                android:textSize="20sp"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4.5"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.RatingBar.Small"/>

            <TextView
                android:id="@+id/item_mota_diadiem7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Là một nơi thư giản yên tỉnh thích hợp cho các bạn thích yên tĩnh"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>